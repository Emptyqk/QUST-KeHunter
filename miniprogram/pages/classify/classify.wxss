.classify-container {
  display: flex;
  background-color: white;
}
.classify-left{
  display: flex;
  flex-direction: column;
}
.classify-left-item{
  background-color: #f3f3f3;
  padding-top: 40rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 40rpx;
  font-size: 26rpx;
  position: relative;
  text-align: center;
}
.classify-line{
  position: absolute;
  left: 0;
  width: 0;
  height: 50%;
  border:  solid black;
  top: 50%;
  transform: translateY(-50%);
}
.classify-select{
  background-color: white;
}
.classify-left-text{
  white-space: nowrap;
}

.classify-right{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  align-content: flex-start ;
}
.classify-right-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33.3%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.classify-right-item .classify-right-image {
  width: 85rpx;
  height: 85rpx;
}
.classify-right-item .classify-right-text {
  font-size: 26rpx;

}