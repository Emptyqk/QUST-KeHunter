.body {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.logo {
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  width: 300rpx;
  height: 300rpx;
  padding-top: 50rpx;
}

.container {
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.input {
  width: 100%;
  border-bottom: 2rpx solid rgb(222,188,188);
  margin-top: 60rpx;
}

.to-register{
  margin-top: 80rpx;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.login-btn {
  width: 90% !important;
  margin-top: 80rpx;
  border-radius: 40rpx;
}