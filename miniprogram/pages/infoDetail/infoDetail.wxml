<view class="body">
    <swiper class="banner" indicator-dots="true" autoplay="false" interval="2000" duration="500">
        <block wx:for="{{ info.imgList }}" wx:key="*this">
            <swiper-item>
                <image class="banner-image" src="{{ item }}"></image>
            </swiper-item>
        </block>
    </swiper>

    <view class="name">{{ info.name }}</view>

    <view class="container">
        <view class="date item">
            <text class="label">цЛ╛хИ░цЧ╢щЧ┤</text>
            <text>{{ info.date }}</text>
        </view>
        <view class="region item">
            <text class="label">цЛ╛хИ░хЬ░чВ╣</text>
            <text>{{ info.region }}</text>
        </view>
        <view class="desc item">{{ info.desc }}</view>
    </view>
    <view class="comment">
      <view class="title">шпДшо║хМ║</view>
      <view class="comment-list">
        <view class="comment-item" wx:for="{{info.commentList}}" wx:key="index">
          <view class="comment-item-left">
            <image class="avatar" src="{{item.avatarUrl}}"></image>
              <view class="content">
                <text>{{item.nickName}}</text>
                <text>{{item.content}}</text>
              </view>
          </view>
          <view class="comment-item-right">
            {{item.time}}
          </view>
        </view>
      </view>
      <view class="comment-input">
        <textarea class="comment-textarea" placeholder="шп╖ш╛УхЕецВичЪДшпДшо║" name="" id="" cols="30" rows="10" value="{{comment}}" bindinput="getComment"></textarea>
        <button class="comment-button" type="primary" bindtap="submitComment" >хПСщАБ</button>
      </view>
    </view>
    <!-- шодщвЖхИЧшбия╝ИхПСх╕ГшАЕцЯечЬЛя╝Й -->
    <view class="claim-section" wx:if="{{ isOwner && claimList.length > 0 }}">
        <view class="claim-title">шодщвЖхИЧшби</view>
        <view class="claim-list">
            <view class="claim-item" wx:for="{{ claimList }}" wx:key="_id">
                <view class="claim-item-info">
                    <text class="claim-time">{{ item.claimTimeFormatted }}</text>
                    <text class="claim-status">
                        <text wx:if="{{ item.status === 0 }}">х╛Ечбошод</text>
                        <text wx:elif="{{ item.status === 1 }}" class="status-confirmed">х╖▓чбошод</text>
                        <text wx:elif="{{ item.status === 2 }}" class="status-rejected">х╖▓цЛТч╗Э</text>
                    </text>
                </view>
                <view class="claim-item-actions" wx:if="{{ item.status === 0 }}">
                    <button class="claim-btn confirm-btn" size="mini" bindtap="confirmClaim" data-claimid="{{ item._id }}">чбошод</button>
                    <button class="claim-btn reject-btn" size="mini" bindtap="rejectClaim" data-claimid="{{ item._id }}">цЛТч╗Э</button>
                </view>
            </view>
        </view>
    </view>

    <!-- шодщвЖчК╢цАБцПРчд║я╝ИщЭЮхПСх╕ГшАЕя╝Й -->
    <view class="claim-status-tip" wx:if="{{ !isOwner && claimStatus !== null && claimStatus !== undefined }}">
        <text wx:if="{{ claimStatus === 0 }}" class="status-waiting">тЬУ шодщвЖчК╢цАБя╝Ъх╛Ечбошод</text>
        <text wx:elif="{{ claimStatus === 1 }}" class="status-confirmed">тЬУ шодщвЖчК╢цАБя╝Ъх╖▓чбошод</text>
        <text wx:elif="{{ claimStatus === 2 }}" class="status-rejected">тЬЧ шодщвЖчК╢цАБя╝Ъх╖▓цЛТч╗Э</text>
    </view>

    <!-- х╖▓шодщвЖчК╢цАБцПРчд║ -->
    <view class="claimed-tip" wx:if="{{ info.state === 1 && !isOwner }}">
        <text>цндхд▒чЙй/хд▒ф╕╗х╖▓швлшодщвЖ</text>
    </view>

    <view class="bottom">
        <view class="bottom-left" bindtap="getPhone">
            <text class="icon-text">ЁЯУЮ</text>
            <text>шБФч│╗цИС</text>
        </view>
        <!-- шодщвЖцМЙщТоя╝ИщЭЮхПСх╕ГшАЕф╕ФцЬкшодщвЖцЧ╢цШ╛чд║я╝Й -->
        <view class="bottom-claim" bindtap="toClaim">
            <text class="claim-btn-text">
                <text wx:if="{{ claimStatus === null || claimStatus === undefined }}">шодщвЖ</text>
                <text wx:elif="{{ claimStatus === 0 }}">хПЦц╢ИшодщвЖ</text>
                <text wx:else>х╖▓шодщвЖ</text>
            </text>
        </view>
        <view class="bottom-right" bindtap="toCollection">
            <image class="icon-collection" src="{{ collectionIcon[0] }}"></image>
            <text>цФ╢шЧП</text>
        </view>
    </view>


</view>