.banner {
  height: 60vh;
}
.banner-image {
  width: 100%;
  height: 60vh;
}
.name {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
  font-weight: bold;
}
.container {
  background-color: #fff;
  margin-top: 20rpx;
}
.container .item {
  padding: 18rpx;
  display: flex;
}

.container .item .label {
  width: 70rpx;
  color: #999;
  font-size: 26rpx;
  margin-right: 20rpx;
}

.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background-color: #fff;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 0;
  box-sizing: border-box;
  border-top: 1px solid #e5e5e5;
  z-index: 100;
}

.bottom .bottom-left {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  padding: 15rpx 20rpx;
  color: #666;
  font-size: 24rpx;
}

.bottom .bottom-left .icon-text {
  font-size: 32rpx;
  margin-bottom: 5rpx;
}

.bottom .bottom-left text:last-child {
  font-size: 22rpx;
}

.bottom .bottom-claim {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #07c160;
  border-radius: 50rpx;
  padding: 15rpx 40rpx;
  margin: 0 20rpx;
  min-width: 140rpx;
  flex-shrink: 0;
}

.bottom .bottom-claim .claim-btn-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

.bottom .bottom-right {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  padding: 15rpx 20rpx;
  color: #666;
  font-size: 24rpx;
}

.bottom .bottom-right .icon-collection {
  width: 36rpx;
  height: 36rpx;
  margin-bottom: 5rpx;
}

.bottom .bottom-right text {
  font-size: 22rpx;
}

.bottom .bottom-left .icon-comment {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  margin-left: 20rpx;

}

.bottom .bottom-right .icon-collection {
  width: 40rpx;
  height: 40rpx;
} 
.bottom .bottom-right{
  display: flex;
  flex-direction: column;
  align-items: center;
} 

.body {
  position: relative;
  padding-bottom: 120rpx;
  min-height: 100vh;
}

.comment {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.comment .title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
}

.comment-list {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.comment-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.comment-item-left {
  display: flex;
  align-items: center;
}

.comment .avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.comment-item-left .content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 20rpx;
}

.comment .comment-textarea {
  border: 1px solid #000;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
}

.comment-button {
  margin-top: 20rpx;
  width: 50%;
}

/* 认领相关样式 */
.claim-section {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.claim-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.claim-list {
  display: flex;
  flex-direction: column;
}

.claim-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.claim-item:last-child {
  border-bottom: none;
}

.claim-item-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.claim-time {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.claim-status {
  font-size: 28rpx;
}

.claim-item-actions {
  display: flex;
  gap: 20rpx;
}

.claim-btn {
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
}

.confirm-btn {
  background-color: #07c160;
  color: #fff;
}

.reject-btn {
  background-color: #ff4757;
  color: #fff;
}

.claim-status-tip {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.status-waiting {
  color: #ff9800;
}

.status-confirmed {
  color: #07c160;
}

.status-rejected {
  color: #ff4757;
}

.claimed-tip {
  background-color: #fff3cd;
  margin-top: 20rpx;
  padding: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #856404;
  border: 1px solid #ffeaa7;
  border-radius: 10rpx;
}